{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": [
      "dom",
      "dom.iterable",
      "es6"],                                        
    "module": "commonjs",                                
    "rootDir": "./",                                  
    "typeRoots": [
      "./node_modules/@types"
    ],                                  
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "./dist",                                   
    "removeComments": true,                          
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true ,
    "jsx": "react-jsx"                                
  }
}
